  "shortcuts": [
    {
      "name": "Hacer pedido",
      "short_name": "Pedido",
      "description": "Haz un pedido rápido de comida",
      "url": "/cliente/menu",
      "icons": [
        {
          "src": "/static/icons/order-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mis pedidos",
      "short_name": "Pedidos",
      "description": "Ver el estado de mis pedidos",
      "url": "/cliente/mis_pedidos",
      "icons": [
        {
          "src": "/static/icons/tracking-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Carrito",
      "short_name": "Carrito",
      "description": "Ver mi carrito de compras",
      "url": "/cliente/carrito",
      "icons": [
        {
          "src": "/static/icons/cart-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/static/img/screenshots/home-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/static/img/screenshots/menu-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/static/img/screenshots/home-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.domiflash.app",
      "id": "com.domiflash.app"
    }
  ],
  "share_target": {
    "action": "/share-restaurant",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+domiflash",
      "url": "/order?id=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  }
}