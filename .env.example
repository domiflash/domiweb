# 🍕 DomiFlash - Configuración de Variables de Entorno
# Copia este archivo como .env y modifica los valores según tu configuración

# 🗄️ === CONFIGURACIÓN DE BASE DE DATOS ===
DB_HOST=localhost
DB_USER=domiflash
DB_PASSWORD=tu_password_seguro_aqui
DB_NAME=dbflash

# 🔐 === SEGURIDAD DE FLASK ===
# Genera una clave secreta única para tu instalación
# Puedes usar: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=tu_clave_super_secreta_de_64_caracteres_cambiar_por_una_real

# 📧 === CONFIGURACIÓN DE EMAIL (Gmail) ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password_gmail_16_caracteres
MAIL_DEFAULT_SENDER=tu_email@gmail.com

# 🕐 === CONFIGURACIÓN DE SESIONES ===
SESSION_TIMEOUT_MINUTES=30
SESSION_WARNING_MINUTES=5
SESSION_COOKIE_SECURE=False
SESSION_FILE_DIR=./flask_session

# 🚫 === LÍMITES DE SEGURIDAD ===
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15

# 🌐 === CONFIGURACIÓN DE SERVIDOR ===
FLASK_ENV=development
FLASK_DEBUG=True

# 📝 === NOTAS IMPORTANTES ===
# 1. NUNCA subas este archivo .env a Git
# 2. Para Gmail, usa "Contraseña de aplicación", no tu contraseña normal
# 3. Para generar SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# 4. En producción, cambia SESSION_COOKIE_SECURE=True (requiere HTTPS)